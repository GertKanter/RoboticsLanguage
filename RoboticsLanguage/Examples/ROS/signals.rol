# An example of a simple definition of ROS topics

node(
  name:"example signals",

  # An incoming signal
  definitions:block(
    x ∈ Signals(Reals,
      rosTopic:'/test/x',
      flow:'incoming',
      onChange: block(
        print('x has changed')
      ),
      onNew: block(
        print('x is new')
      )
    ),

    # An outgoing signal
    y ∈ Signals(Reals,
      rosTopic:'/test/y',
      flow:'outgoing',
      autoPublish:true
    )
  ),

  initialise: print('Starting node.')
)
